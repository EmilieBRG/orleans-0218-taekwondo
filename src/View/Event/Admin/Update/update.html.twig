<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Modification</h3>
    </div>
    <div class="panel-body">
        <form action="" method="POST">
            <div class="form-group">
                <label>Titre</label>
                <input name="title" class="form-control" placeholder="Saisissez un nouveau titre" value="{{ event.title }}" required/>
            </div>
            <div class="form-group">
                <label>Description</label>
                <input name="dateEvent" class="form-control" rows="3" placeholder="Saisissez une nouvelle date" value="{{ event.dateEvent | date('d/m/Y') }}" required>
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea name="description" class="form-control" rows="3" placeholder="Saisissez une nouvelle description" required>{{ event.description }}</textarea>
            </div>
            <div class="form-group">
                <label for="">Flyers</label>
                <img class="img-responsive" src="/{{ event.picture }}">

                <input type="file"  placeholder="Flyers de l'événement ( facultatif )" name="upload" id="upload"/>
                <input type="hidden" name="MAX_FILE_SIZE" value="1000000"/>
            </div>
            <button type="submit" class="btn btn-default btn-block">Valider</button>
        </form>
    </div>
</div>