{% extends 'Admin/layout.html.twig' %}

{% block content %}
    <section class="container">
        <h1>Evénements - Listing</h1>
        <div class="row">
            <div class="col-md-4">{% include 'Event/Admin/create.html.twig' %}</div>
                    <div class="col-md-8">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h2 class="panel-title">Evénements</h2>
                            </div>
                            <div class="panel-body">
                                <table class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th>Nom de l'événement / date</th>
                                        <th>Modifier</th>
                                        <th>Supprimer</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <div class="row">
                                        {% for event in eventsAdmin %}
                                            <tr>
                                                <td class="col-md-8">{{ event.title }} </br> {{ event.dateEvent | date('d/m/Y H:i') }}</td>
                                                <td class="col-md-2"><button class="btn btn-warning">Modifier</button></td>
                                                <td class="col-md-2"><button class="btn btn-danger">Supprimer</button></td>
                                            </tr>
                                        {% endfor %}
                                    </div>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
            </div>

    </section>
{% endblock %}