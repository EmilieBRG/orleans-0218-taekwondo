<!-- Créer une nouvelle catégorie -->
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Créer un événement</h3>
    </div>
    <div class="panel-body">
        <!-- Formulaire de création -->
        <form action="event/create" method="POST" role="form" enctype="multipart/form-data">
            <div class="form-group">
                <label for="">Nom de l'événement :</label>
                <input type="text" class="form-control" placeholder="Nom du nouvel événement" name="title" required/>
            </div>
            <div class="form-group">
                <label for="">Date de l'événement :</label>
                <input type="date" class="form-control" placeholder="Date du nouvel événement" name="date_event" required/>
            </div>
            <div class="form-group">
                <label for="">Description de l'événement :</label>
                <input type="text" class="form-control" placeholder="Description de l'événement" name="description" required/>
            </div>
            <div class="form-group">
                <label for="">Flyers :</label>
                <input type="file" name="upload" id="upload"/>
                <input type="hidden" name="MAX_FILE_SIZE" value="1000000"/>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Créer</button>
        </form>
    </div>
</div>