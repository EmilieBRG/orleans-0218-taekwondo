<!-- Créer une nouvelle catégorie -->
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Créer un événement</h3>
    </div>
    <div class="panel-body">
        <!-- Formulaire de création -->
        <form action="category/create" method="POST" role="form">
            <div class="form-group">
                <label for="">Nom de lévénement</label>
                <input type="text" class="form-control" placeholder="Nom du nouvel événement" name="name" required/>
            </div>
            <div class="form-group">
                <label for="">Date de l'événement</label>
                <input type="date" class="form-control" placeholder="Date du nouvel événement" name="date" required/>
            </div>
            <div class="form-group">
                <label for="">Description de l'événement</label>
                <input type="text" class="form-control" placeholder="Descrition de l'événement" name="description" required/>
            </div>
            <div class="form-group">
                <label for="">Flyers</label>
                <input type="text" class="form-control" placeholder="Flyers de l'événement ( facultatif )" name="image" required/>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Créer</button>
        </form>

    </div>
</div>