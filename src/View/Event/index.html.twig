{% extends 'layout.html.twig' %}

{% block content %}
    <section class="container">

        <div class="row">
            <div class="col-md-12">
                <h2>Évènements</h2>
            </div>
        </div>

        <!-- Form -->
        <div class="row">
            <div class="col-md-12">
                <form action="" method="GET" class="form-inline" role="form" name="eventList">
                    <!-- Category ID -->
                    <select name="filterId" class="form-control fullwidth" onchange="eventList.submit()">
                        <option value="0" {% if filter == 1 %}selected{% endif %}>-- Sélectionner une catégorie --</option>
                        <option value="1" {% if filter == 1 %}selected{% endif %}>Liste de tout les événements</option>
                        <option value="2" {% if filter == 2 %}selected{% endif %}>Liste des évémenements à venir</option>
                        <option value="3" {% if filter == 3 %}selected{% endif %}>Liste des évémenements passés</option>
                    </select>
                </form>
            </div>
        </div>

        <!-- Thumbnail -->
            {% for event in events %}
            {% if loop.index is odd %}<div class="row text-center">{% endif %}
                <div class="col-sm-6 col-md-6">
                    <div class="thumbnail">
                        <img src="{{ event.picture }}" alt="flyers de l'événement" />
                        <div class="caption">
                            <h3>{{ event.title }}</h3>
                            <p>{{ event.dateEvent | date('d/m/Y H:i') }}</p>
                            <p>{{ event.description }}</p>
                        </div>
                    </div>
                </div>
                {% if loop.index is even or loop.last %}</div>{% endif %}
            {% endfor %}

    </section>
{% endblock %}