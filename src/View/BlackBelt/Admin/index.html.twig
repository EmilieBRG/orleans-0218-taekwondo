{% extends 'Admin/layout.html.twig' %}

{% block content %}
    <section class="container">
        <h1>Ceintures noires - Listing</h1>
        <div class="row">
            <div class="col-md-4">{% include 'BlackBelt/Admin/create.html.twig' %}</div>
            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">Les ceintures noires</h2>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Prénom NOM / Numéro de Dan / Date d'obtention</th>
                                <th>Modifier</th>
                                <th>Supprimer</th>
                            </tr>
                            </thead>
                            <tbody>
                            <div class="row">
                                {% for dan, blackBelt in blackBeltsAdmin %}
                                    <tr>
                                        <td class="col-md-8">{{ blackBelt.firstName }} {{ blackBelt.lastName }} : {{ dan }} ° Dan obtenu le {{ blackBelt.dateDanBlackBelt }}</td>
                                        <td class="col-md-2">
                                            <form action="blackBelt/{{ BlackBelt.id }}/update" method="POST" confirm="Modifier la ceinture noire '{{ blackBelt.firstName }} {{ blackBelt.lastName }}' ?">
                                                <button type="submit" class="btn btn-warning btn-block">Modifier </button>
                                            </form>
                                        </td>
                                        <td class="col-md-2">
                                            <form action="blackBelt/{{ BlackBelt.id }}/delete" method="POST" confirm="Supprimer la ceinture noire '{{ blackBelt.firstName }} {{ blackBelt.lastName }}' ?">
                                                <button type="submit" class="btn btn-danger btn-block">Supprimer </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </div>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </section>
{% endblock %}