

{% extends 'Admin/layout.html.twig' %}

{% block title %}
    {{ parent() }} - Bureaux
{% endblock %}

{% block content %}
    <section class="container">
        <h1>Bureau Directeur - Listing</h1>
        <div class="row">
            <div class="col-md-4">{% include 'Office/Admin/create.html.twig' %}</div>
                    <div class="col-md-8">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h2 class="panel-title">Bureau Directeur</h2>
                            </div>
                            <div class="panel-body">
                                <table class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th>Nom - Pr√©nom - Fonction</th>
                                        <th>Modifier</th>
                                        <th>Supprimer</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <div class="row">
                                        {% for office in officesAdmin %}
                                            <tr>
                                                <td class="col-md-8">{{ office.lastName }} - {{ office.firstName }} - {{ office.Task }}</td>
                                                <td class="col-md-2"></td>
                                                <td class="col-md-2">
                                                    <form action="office/{{ office.id }}/delete" method="POST" confirm="Supprimer le bureau : '{{ office.task }}' ?">
                                                        <button type="submit" class="btn btn-danger btn-block">Supprimer </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </div>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
            </div>

    </section>
{% endblock %}