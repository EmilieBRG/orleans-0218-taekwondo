<div class="panel panel-default" xmlns="http://www.w3.org/1999/html">
    <div class="panel-heading">
        <h3 class="panel-title">Modification</h3>
    </div>
    <div class="panel-body">
        <form action="update/update" method="POST" role="form" enctype="multipart/form-data" confirm="Modifier le bureau : '{{ teacher.last_name }} {{ teacher.first_name }}' ?">
            <div class="form-group">
                <label for="last_name">Nom :</label>
                <input name="last_name" id="last_name" class="form-control" placeholder="Saisissez un nouveau nom" value="{{ teacher.last_name }}" required/>
            </div>
            <div class="form-group">
                <label for="first_name">Nom :</label>
                <input name="first_name" id="first_name" class="form-control" placeholder="Saisissez un nouveau prÃ©nom" value="{{ teacher.first_name }}" required/>
            </div>
            <div class="form-group">
                <label for="description">Description du professeur / adjoint :</label>
                <textarea name="description" id="description" rows="8" class="form-control" {{ teacher.description }}" value="{{ teacher.first_name }}" required/> {{ teacher.description }}</textarea
            </div>
            <div class="form-group">
                <label>Photo du gestionnaire (facultatif) :</label>
                <img class="img-responsive" src="{{ teacher.picture }}">

                <input type="file" name="upload" id="upload" value="{{ office.picture }}"/>
                <input type="hidden" name="MAX_FILE_SIZE" value="1000000"/>
            </div>
            <button type="submit" class="btn btn-default btn-block">Valider</button>
        </form>
    </div>
</div>