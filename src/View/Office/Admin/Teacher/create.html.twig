<!-- Créer une nouvelle catégorie -->
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Créer un bureau</h3>
    </div>
    <div class="panel-body">
        <!-- Formulaire de création -->
        <form action="teacher/create" method="POST" role="form" enctype="multipart/form-data">
            <div class="form-group">
                <label for="">Nom :</label>
                <input type="text" class="form-control" placeholder="Nom de la personne en charge" name="last_name" required/>
            </div>
            <div class="form-group">
                <label for="">Prénom :</label>
                <input type="text" class="form-control" placeholder="Prénom de la personne en charge" name="first_name" required/>
            </div>
            <div class="form-group">
                <label for="">Description du professeur / adjoint :</label>
                <input type="text" class="form-control" placeholder="Description de l'événement" name="description" required/>
            </div>
            <div class="form-group">
                <label for="">Photo du gestionnaire :</label>
                <input type="file" name="upload" id="upload"/>
                <input type="hidden" name="MAX_FILE_SIZE" value="1000000"/>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Créer</button>
        </form>
    </div>
</div>