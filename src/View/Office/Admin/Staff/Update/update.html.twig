<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Modification</h3>
    </div>
    <div class="panel-body">
        <form action="update/update" method="POST" role="form" enctype="multipart/form-data" confirm="Modifier le bureau : '{{ office.task }}' ?">
            <div class="form-group">
                <label for="last_name">Nom :</label>
                <input name="last_name" id="last_name" class="form-control" placeholder="Saisissez un nouveau nom" value="{{ office.last_name }}" required/>
            </div>
            <div class="form-group">
                <label for="first_name">Nom :</label>
                <input name="first_name" id="first_name" class="form-control" placeholder="Saisissez un nouveau prÃ©nom" value="{{ office.first_name }}" required/>
            </div>
            <div class="form-group">
                <label for="task">Fonction :</label>
                <input name="task" id="task" class="form-control" placeholder="Saisissez une nouvelle fonction" value="{{ office.task }}" required/>
            </div>
            <div class="form-group">
                <label>Photo du gestionnaire (facultatif) :</label>
                <img class="img-responsive" src="{{ office.picture }}">

                <input type="file" name="upload" id="upload" value="{{ office.picture }}"/>
                <input type="hidden" name="MAX_FILE_SIZE" value="1000000"/>
            </div>
            <button type="submit" class="btn btn-default btn-block">Valider</button>
        </form>
    </div>
</div>