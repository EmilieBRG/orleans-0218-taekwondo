{% extends 'layout.html.twig' %}
{% block content %}
<section class="container">
    <div class="row">
        <!-- Gallery informations -->
        <div class="col-md-3">
            <h2>{{ gallery.title }}</h2>
            <p>{{ gallery.description }}</p>
        </div>
        <div class="col-md-9">
            <!-- Images -->
            <div class="row">
                {% for image in images %}
                <div class="col-xs-6 col-sm-3 col-md-2">
                    <img class="fullwidth" src="{{ image.url }}" alt="Image"/>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
{% endblock %}