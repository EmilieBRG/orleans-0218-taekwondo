<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Création</h3>
    </div>
    <div class="panel-body">
        <form action="gallery/create" method="POST">
            <div class="form-group">
                <label>Titre</label>
                <input class="form-control" name="title" placeholder="Saisissez un nom de galerie..." required/>
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" name="description" placeholder="Saisissez une description de votre galerie..." rows="3" required></textarea>
            </div>
            <div class="form-group">
                <label>Catégorie</label>
                <select name="categoryId" class="form-control" required>
                    <option value="">-- Sélectionnez une catégorie --</option>
                    {% for category in categories %}
                        <option value="{{ category.id }}">{{ category.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <button class="btn btn-primary btn-block">Créer</button>
        </form>
    </div>
</div>