{% extends 'Admin/layout.html.twig' %}

{% block title %}
    {{ parent() }} - Albums - Catégories
{% endblock %}

{% block content %}
    <section class="container">
        <h1>Albums - Catégories</h1>
        <div class="row">
            <div class="col-md-4">{% include 'Album/Admin/Category/create.html.twig' %}</div>
            <div class="col-md-8">
                <div class="row m-t-0">
                    <div class="col-xs-12">{% include 'Album/Admin/Category/list.html.twig' %}</div>
                    {% if selection != null %}
                        <div class="col-xs-12 col-md-6"></div>
                        <div class="col-xs-12 col-md-6">{% include 'Album/Admin/Category/delete.html.twig' %}</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}