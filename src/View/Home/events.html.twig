<div class="container">
    <h2>Evenements à venir</h2>
    <div class="row text-center">
        {% for event in events %}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ event.image }}" alt="flyers de l'événement">
                    <div class="caption">
                        <h3>{{ event.title }}</h3>
                        <p>{{ event.date | date('d/m/Y H:i') }}</p>
                        <p>{{ event.description }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
