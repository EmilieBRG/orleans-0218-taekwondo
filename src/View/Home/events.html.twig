<section class="trigram trigram-sky">
    <div class="container container-events">
        <h2>Évènements à venir</h2>
        <div class="row text-center flex-parent">
            {% for event in events %}
                <div class="col-sm-12 col-md-4 flex-child">
                    <div class="thumbnail fullheight">
                        <img src="{{ event.picture }}" alt="flyers de l'événement">
                        <div class="caption">
                            <h3>{{ event.title }}</h3>
                            <p>{{ event.dateEvent | date('d/m/Y') }}</p>
                            <p>{{ event.description }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
